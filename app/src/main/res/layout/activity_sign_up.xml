<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.myapplication.login_activite"
    android:background="#6D66CC">


    <ImageView
        android:id="@+id/uppic"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginEnd="31dp"

        android:layout_marginRight="31dp"
        android:src="@drawable/signupp" />

    <TextView
        android:id="@+id/etoile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_insc"
        android:layout_alignBottom="@+id/login_insc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:text="*"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/etoile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pass_insc"
        android:visibility="gone"
        android:text="*"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/etoile3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pass_insc"
        android:layout_alignBottom="@+id/pass_insc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:text="*"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/login_insc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/uppic"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@layout/custom_input"
        android:drawableStart="@layout/custom_person_icon"
        android:drawableLeft="@layout/custom_person_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingLeft="@dimen/a10"
        android:paddingEnd="12dp"
        android:textColor="#ffffff"
        android:textColorHint="#B4C0B3D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <EditText
        android:id="@+id/pass_insc"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:background="@layout/custom_input"
        android:drawableStart="@layout/custom_lock_icon"
        android:drawableLeft="@layout/custom_lock_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:hint="Password"
        android:password="true"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingLeft="@dimen/a10"
        android:paddingEnd="12dp"
        android:layout_below="@id/login_insc"
        android:textColor="#ffffff"
        android:textColorHint="#B4C0B3D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.56"
        />

    <EditText
        android:id="@+id/pass_conf"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/pass_insc"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:background="@layout/custom_input"
        android:drawableStart="@layout/custom_lock_icon"
        android:drawableLeft="@layout/custom_lock_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:hint="Confirm password"
        android:password="true"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingLeft="@dimen/a10"
        android:paddingEnd="12dp"
        android:textColor="#ffffff"
        android:textColorHint="#B4C0B3D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <EditText
        android:id="@+id/pass_conf_inv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/pass_conf"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:background="@layout/custom_input"
        android:clickable="false"
        android:drawableStart="@layout/custom_lock_icon"
        android:drawableLeft="@layout/custom_lock_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:hint="Confirm password"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingLeft="@dimen/a10"
        android:paddingEnd="12dp"
        android:textColor="#ffffff"
        android:textColorHint="#B4C0B3D8"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <Button
        android:id="@+id/ok"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@layout/custom_button"
        android:fontFamily="@font/baloo_thambi"
        android:text="A new journey begins"
        android:textColor="#6D66CC"
        android:layout_below="@id/pass_conf_inv"
        android:textSize="17dp" />


</RelativeLayout>

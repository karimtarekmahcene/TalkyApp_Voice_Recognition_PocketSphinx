<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6D66CC">

    <Button
        android:id="@+id/speak"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_speak"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/a10"
        android:layout_marginBottom="@dimen/a10"
        android:background="@drawable/button_next" />

    <Button
        android:id="@+id/help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/a10"
        android:background="@drawable/help"
        android:textColor="#fff"

        android:textSize="1dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/cat"
        app:civ_border_color="#A9A5E3"
        app:civ_border_width="4dp" />

    <TextView
        android:id="@+id/caption_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="37dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="27dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/imgname"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_below="@+id/caption_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/for_textview"
        android:fontFamily="@font/baloo_thambi"
        android:paddingVertical="@dimen/a10"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/jet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/help"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Help"
        android:textAlignment="center"
        android:textColor="#B4FFFFFF"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aide"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginRight="13dp"
        android:clickable="false"
        android:text="aide"
        android:textAlignment="center"
        android:textColor="#ffc200"
        android:textSize="16sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/aide"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_chat"
        android:clickable="false"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="350dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="180dp"
        android:layout_height="350dp"
        app:srcCompat="@drawable/logo5" />


</RelativeLayout>